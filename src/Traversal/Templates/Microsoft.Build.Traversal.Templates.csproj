<Project Sdk="Microsoft.Build.NoTargets">

  <PropertyGroup Label="Package properties">
    <Title>MSBuild Traversal templates</Title>
    <Description>Templates for common MSBuild traversal projects</Description>
    <PackageTags>MSBuild traversal dirs template</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <LocalizeTemplates>false</LocalizeTemplates>
    <PackageType>Template</PackageType>
  </PropertyGroup>
  <PropertyGroup>
    <ArtifactsPath>$(BaseArtifactsPath)$(MSBuildProjectName)\</ArtifactsPath>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
    <NoWarn>$(NoWarn);NU5128</NoWarn>
    <NoDefaultExcludes>true</NoDefaultExcludes>
    <EnableDefaultItems>false</EnableDefaultItems>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="traversal\**\*" Exclude="traversal\**\bin\**;traversal\**\obj\**" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
